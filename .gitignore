# Wordpress - ignore core, configuration, examples, uploads and logs.
# https://github.com/aramboyajyan/wordpress-gitignore

# WP dirs.
wp-admin/*
wp-includes/*
wp-snapshots/*
wp-content/*

# Exclude themes and plugins
!wp-content/themes/
!wp-content/plugins/

# Ignore node dependency directories.
**/node_modules/

# Sitemap files.
sitemap.xml
sitemap.xml
sitemap.xml.gz

# wp-*.php at root will generated after deployment
/wp-*.php
/xmlrpc.php

# Configuration
/.htaccess
wp-config.php

# Example themes
/wp-content/themes/twenty*/

# Example plugin
/wp-content/plugins/hello.php

# Ignore log files and databases.
*.log
*.sql
*.sqlite

# Files in the root.
*.pdf
*.jpg
*.jpeg
*.png
*.txt
*.csv
*.html


# PhpStorm files.
/.idea/
 
# DS_Store files generated by Finder on MacOS.
**/.DS_Store


# Ignore exercise files
/Ex_Files_Customizing_WordPress_Theme_Adobe_XD
